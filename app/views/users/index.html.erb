<p id="notice"><% notice %></p>
<div class="container">
  <div class="row">
  <div class="col-xs-3" >
<%= render 'users/profile', user: current_user, post: @post  %>
</div>

<div class="col-xs-9">
<h2>Users</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @users.each do |user| %>
    <td>

    <%= attachment_image_tag user, :profile_image, format: 'jpeg',fallback: "no_image.jpg", size: "40x40" %>

   </td>
       <td><%= user.username %></td>
       <td><%= link_to'Show', user_path(user), method: :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
