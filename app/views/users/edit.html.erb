<!-- 編集 -->
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

<h2>User Info</h2>

<div style="color:red">
<% if @user.errors.any? %>
<%= @user.errors.count %>
<% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    <% end %>
       </div>




<%= form_for(@user) do |f| %>
<div class="form-group">
    <%= f.label :Name %>
    <%= f.text_field :username,class: 'btn-block' %>
</div>

<div class="form-group">
    <%= f.label :Image %>
    <% attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>

  <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>

<div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :introduction , class: 'btn-block'%>
</div>

    <%= f.submit ' Update User ' , class: 'btn btn-primary btn-block' %>
    </br>

    <% end %>
</div>
</div>