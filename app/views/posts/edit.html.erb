<div class="container">
<div class="row">

<div class="col-md-6 col-md-offset-3">

<h1>Editing Book</h1>

<div style="color:red">

<% if @post.errors.any? %>
<h3>エラーが<%= @post.errors.count %>件あります</h3>
<% @post.errors.full_messages.each do |message| %>
 <li><%= message %></li>
    <% end %>
    <% end %>
 </div>


<%= form_for(@post) do |f| %>
<div class="form-group">
    <%= f.label :Title %><br>
    <%= f.text_field :title ,class: 'btn-block' %>
</div>

<div class="form-group">
    <%= f.label :Opinion %><br>
    <%= f.text_area :body ,class: 'btn-block'%>
</div>

<div class="form-group">
    <%= f.submit 'Update Book',class: 'btn btn-primary btn-block' %>
</div>

    <% end %>

    <%= link_to 'Show',post_path(@post), method: :get %> |
    <!-- user#show -->
    <%= link_to 'Back',posts_path, method: :get %>
</div>
</div>
</div>